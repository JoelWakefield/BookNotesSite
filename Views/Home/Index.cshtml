@model IEnumerable<Book>
@{
    ViewData["Title"] = "Books";
}


<div class="nav-bar">
    @foreach(var book in Model)
    {
        <div class="nav-item">
            <img src="@book.ImageSrc"/>
            <h4>@book.Title</h4>
        </div>
        <br/>
    }
</div>

<div class="text-center flex-parent">
    @foreach(var book in Model)
    {
        <div class="flex-child">

            <p>@book.Author</p>
            <p>@book.Rating/10</p>
            <p>@book.Isbn</p>

            <button class="get-book" id="@book.Id">Read Notes</button>
        
            <h2>@book.Title</h2>
        </div>
    }
</div>

<div id="details-box"></div>
